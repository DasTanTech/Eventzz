<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/colorBG"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.clientProfile"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/clientProfileFrag_propic"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="3dp"
            android:src="@drawable/default_propic"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_20sdp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"
            android:layout_margin="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/clientProfileFrag_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amith Shambuni"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/clientProfileFrag_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="amith.pandu@gmail.com"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="@dimen/_14sdp"
            android:gravity="center"
            android:layout_margin="@dimen/_5sdp"/>

        <TextView
            android:id="@+id/clientProfileFrag_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ph : 8688964344"
            android:textSize="@dimen/_14sdp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="@dimen/_5sdp"/>


    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:background="@drawable/btn_style"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:paddingStart="@dimen/_25sdp"
        android:paddingEnd="@dimen/_25sdp"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/colorPrimary"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_22sdp"
        android:id="@+id/clientProfileFrag_logout_btn"/>




</RelativeLayout>