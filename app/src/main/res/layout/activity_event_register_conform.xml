<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventRegisterConform">


    <androidx.appcompat.widget.Toolbar
        app:navigationIcon="@drawable/ic_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="Event Pass"
        app:titleTextColor="@color/colorWhite"
        android:id="@+id/coAddEventDisplay_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event date"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/_5sdp"/>

            <LinearLayout
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/registerConform_date"
                    android:paddingRight="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:gravity="center"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Booking ID:"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_5sdp"/>

                <TextView
                    android:id="@+id/registerConform_bookingId"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_margin="@dimen/_5sdp"/>

            </LinearLayout>

            <View
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/eventDisplay_div"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_below="@id/eventDisplay_eventName"
                />


            <TextView
                android:id="@+id/registerConform_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amith Product Launch"
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/registerConform_sponsors"
                android:enabled="false"
                android:layout_margin="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:backgroundTint="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_14sdp"
                    android:hint="Sponsored by" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/registerConform_eventAddress"
                android:layout_marginTop="@dimen/_15sdp"
                android:enabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:backgroundTint="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/_12sdp"
                    android:hint="Venue" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:layout_margin="@dimen/_5sdp"
                android:id="@+id/eventDisplay_div2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorPrimary"
                android:layout_below="@id/eventDisplay_eventName"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event pass has been sent to your below mentioned email address,"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp"
                android:layout_margin="@dimen/_5sdp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/registerConform_userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/colorPrimary"
                android:layout_margin="@dimen/_10sdp"
                android:gravity="center"/>




        </LinearLayout>

    </ScrollView>











</LinearLayout>